@*modal for create 3d*@
<div id="modal-editDesign3D" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-scrollable modal-xl">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-center">แก้ไขงาน 3D</h4>
            </div>
            <div class="modal-body">
                <form id="form-editDesign3D">
                    <div class="row d-sm-flex">

                        <div class="col-sm-6">
                            <div class="row col-sm-12 mb-3">
                                <label class="col-sm-4 col-form-label text-end">เลขที่ใบเสนอราคา</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" id="input-edit-3d-quotation" name="input-edit-3d-quotation" disabled />
                                </div>
                            </div>

                            <div class="row col-sm-12 mb-3">
                                <label class="col-sm-4 col-form-label text-end">ผู้รับผิดชอบออกแบบ 3D<span class="text-danger">*</span></label>
                                <div class="col-sm-8">
                                    <select class="form-select" id="select-edit-3d-designName"></select>
                                </div>
                            </div>

                        </div>

                        <div class="col-sm-6">
                            <div class="row col-sm-12 mb-3">
                                <label class="col-sm-4 col-form-label text-end">วันที่พร้อมติดตั้ง</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" id="input-edit-3d-install-date" name="input-edit-3d-install-date" disabled />
                                </div>
                            </div>

                            <div class="row col-sm-12 mb-3">
                                <label class="col-sm-4 col-form-label text-end">วันที่กำหนดส่งงาน</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="date" id="input-edit-3d-due-date" name="input-edit-3d-due-date" />
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-12">
                            <div class="row col-sm-12 mb-3">
                                <label class="col-sm-2 col-form-label text-end">สถานะ Checklist</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="text" id="input-edit-3d-checklist-status" name="input-edit-3d-checklist-status" disabled />
                                </div>
                            </div>

                            <div class="row col-sm-12 mb-3">
                                <label for="formFile" class="col-sm-2 col-form-label text-end">รูปแปลน</label>
                                <div class="col-sm-10">
                                    <input id="display-picture-plan" name="display-picture-plan[]" type="file" class="file" accept="image/*" multiple>
                                </div>
                            </div>

                            <div class="row col-sm-12 mb-3">
                                <label for="formFile" class="col-sm-2 col-form-label text-end">รูป Reference</label>
                                <div class="col-sm-10">
                                    <input id="display-picture-reference" name="display-picture-reference[]" type="file" class="file" accept="image/*" multiple>
                                </div>
                            </div>

                            <div class="row col-sm-12 mb-3">
                                <label for="formFile" class="col-sm-2 col-form-label text-end">อัปโหลดรูป 3D อนุมัติ</label>
                                <div class="col-sm-10">
                                    <input id="select-3d-approve" name="select-3d-approve[]" type="file" class="file" accept="image/*" multiple>
                                </div>
                            </div>

                            <div class="row col-sm-12 mb-3">
                                <label for="formFile" class="col-sm-2 col-form-label text-end"></label>
                                <div class="col-sm-10">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="chkFinal3D">
                                        <label class="form-check-label">
                                            แบบ 3D Final (แก้ไขหลังโฟร์แมนวัดหน้างาน)
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="row col-sm-12 mb-3">
                                <label for="formFile" class="col-sm-2 col-form-label text-end">รูปภาพหน้างานจากโฟร์แมน</label>
                                <div class="col-sm-10">
                                    <input id="display-picture-from-foreman" name="display-picture-from-foreman[]" type="file" class="file" accept="image/*" multiple>
                                </div>
                            </div>

                        </div>

                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-modal-save-3d"><i class="fas fa-save" aria-hidden="true"></i> บันทึก</button>
                <button type="button" class="btn btn-default" data-bs-dismiss="modal"><i class="fa fa-times" aria-hidden="true"></i> ยกเลิก</button>
            </div>
        </div>
    </div>
</div>

<style>
    .file-preview-frame {
        width: 150px;
        height: 200px;
    }

    .krajee-default.file-preview-frame .kv-file-content {
        width: 130px;
        height: 150px;
    }

    .krajee-default .file-footer-caption {
        display: none;
    }

    .kv-file-upload, .fileinput-cancel-button, .fileinput-upload-button, .fileinput-remove-button, .fileinput-remove,
    .btn-toggleheader, .btn-fullscreen, .btn-borderless {
        display: none;
    }
</style>