@{
    ViewData["Title"] = "การออกแบบ Spec";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="~/scripts/config.js"></script>
@* <script src="~/scripts/master/master-function.js"></script>
<script src="~/scripts/master/master-control.js"></script> *@

<style>
    .nav-tabs .nav-link {
        background-color: #AFAFAF;
        color: #FFF;
    }

        .nav-tabs .nav-link.active {
            background-color: #F09723;
            color: #FFF;
        }

    .no-display {
        display: none;
    }

    .mnu-active {
        color: #F09723;
    }

</style>

<script>
    $(function() {
        let imageUrl = localStorage.getItem('imageUrl');
        let path = (imageUrl == "") ? ".." : imageUrl;

        $('#spnMaster').addClass('mnu-active');
        $('#imgMaster').attr('src', `${path}/images/data-processing_2.png`);

        $('#spnSale').removeClass('mnu-active');
        $('#spn3D').removeClass('mnu-active');
        $('#spnForeman').removeClass('mnu-active');
        $('#spnAccounting').removeClass('mnu-active');
        $('#spnHR').removeClass('mnu-active');
        $('#spnStore').removeClass('mnu-active');

        $('#imgSale').attr('src', `${path}/images/sales.png`);
        $('#img3D').attr('src', `${path}/images/graphic-design.png`);
        $('#imgForeman').attr('src', `${path}/images/foreman.png`);
        $('#imgAccounting').attr('src', `${path}/images/accounting.png`);
        $('#imgHR').attr('src', `${path}/images/hr-manager.png`);
        $('#imgStore').attr('src', `${path}/images/stores.png`);

        $("#nav-master").hover(function() {
            console.log('master');
        });
    });
</script>

<div class="row">
    <h4>การออกแบบ 3D</h4>

    <div class="col-sm-12">

        <!-- Nav pills -->
        <ul class="nav nav-pills bg-primary mb-3" style="padding-top: 0.25rem;padding-bottom: 0.25rem;padding-left: 0.25rem;">
            <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="pill" href="#nav-spec-queue-tab">คิวงานตามใบเสนอราคา</a>
            </li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div class="tab-pane active" id="nav-spec-queue-tab">@Html.Partial("_Spec.cshtml")</div>
        </div>

    </div>
</div>