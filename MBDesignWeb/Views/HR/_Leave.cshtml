                                    <input class="form-control" type="text" id="input-emp-idCard" name="input-emp-idCard" maxlength="13" />
                                </div>
                                <div class="col-sm-12 mb-2">
                                    <label class="control-label">นามสกุล<span class="text-danger">*</span></label>
                                    <input class="form-control" type="text" id="input-emp-lastName" name="input-emp-lastName" />
                                </div>
