                                    <label class="control-label">ตำแหน่ง<span class="text-danger">*</span></label>
                                    <select class="form-select" id="select-emp-position" data-selected="" name="select-emp-position"></select>
                                </div>
                                <div class="col-sm-12 mb-2">
                                    <label class="control-label">การรับเงินเดือน<span class="text-danger">*</span></label>
                                    <select class="form-select" id="select-salary-type" data-selected="" name="select-salary-type"></select>
                                </div>
                                <div class="col-sm-12 mb-2">
                                    <label class="control-label">เงินเดือน<span class="text-danger">*</span></label>
                                    <input class="form-control" type="number" id="input-emp-salary" name="input-emp-salary" />
                                </div>

                                <div class="col-sm-12 mb-2">
                                    <label class="col-sm-12 control-label mb-2">การตอกบัตร</label>
                                    <div class="text-center">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="radioEmpAttendance" id="radioEmpInputCard" value="empInputCard" checked>
                                            <label class="form-check-label">ตอกบัตร</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="radioEmpAttendance" id="radioEmpNoInputCard" value="empNoInputCard">
                                            <label class="form-check-label">ไม่ตอกบัตร</label>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="col-sm-12 mb-2">
                            <label for="formFile" class="form-label">ลายเซ็นต์</label>
                            <input id="select-emp-signature" name="select-emp-signature[]" type="file" class="file" accept="image/png">
