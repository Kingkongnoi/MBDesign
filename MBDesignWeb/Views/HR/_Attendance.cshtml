@{
    ViewData["Title"] = "ฝ่ายบุคคล";
}

<head>
   
</head>

<style>
    .loader {
        z-index: 10000;
    }

    #tb-attendance-setting-list tbody tr {
        cursor: pointer !important;
    }

    .table tr th {
        background-color: #F09723;
        color: #FFF;
        text-align: center !important;
    }

    .no-display {
        display: none;
    }

    .text-primary-custom {
        color: #F09723;
    }

    .btn-add-custom {
        color: #F09723;
        background-color: transparent /*#0d6efd*/;
        border-color: transparent /*#0d6efd*/;
        font-size: 16px;
    }

    .custom-dropdown {
        margin-top: -5px;
    }

        .custom-dropdown > div.header-dropdown {
            font-size: 1rem;
            font-weight: 900;
            padding: 6px 3px 0px 3px;
        }

        .custom-dropdown > div.detail-dropdown {
            padding: 0px 3px;
            font-size: 11px;
            font-weight: 400;
        }

    .select2-selection {
        height: 36px !important;
    }

    .file-preview {
        display: none;
    }
</style>

<div class="row">
    <div class="col-sm-12 mt-2">
        <nav>
            <div class="nav nav-tabs" id="nav-tab-attendance" role="tablist">
                <button class="nav-link active" id="nav-attendance-time-tab" data-bs-toggle="tab" data-bs-target="#nav-attendance-time" type="button" role="tab" aria-controls="nav-attendance-time" aria-selected="true" style="margin-right:2px;">ข้อมูลเวลาเข้า-ออกงาน</button>
                <button class="nav-link" id="nav-attendance-setting-tab" data-bs-toggle="tab" data-bs-target="#nav-attendance-setting" type="button" role="tab" aria-controls="nav-attendance-information" aria-selected="false" style="margin-right:2px;">กำหนดเวลา</button>
            </div>
        </nav>
        <div class="tab-content" id="nav-tab-attendance-tabContent">
            <div class="tab-pane fade show active" id="nav-attendance-time" role="tabpanel" aria-labelledby="nav-attendance-time-tab">
                <div class="container-fluid" id="divAttendanceTime">
                    <div class="row mt-2">
                        <form id="form-search-attendance-time">
                            <div class="row col-sm-12">
                                <div class="col-sm-2">
                                    <label>รหัสพนักงาน</label>
                                    <input type="text" class="form-control" id="input-search-attendance-time-emp-code" name="input-search-attendance-time-emp-code" placeholder="" />
                                </div>
                                <div class="col-sm-2">
                                    <label>ชื่อพนักงาน</label>
                                    <input type="text" class="form-control" id="input-search-attendance-time-emp-name" name="input-search-attendance-time-emp-name" placeholder="" />
                                </div>
                                <div class="col-sm-2">
                                    <label>วันที่ทำงานเริ่มต้น</label>
                                    <input type="date" class="form-control" id="input-search-attendance-time-start-date" name="input-search-attendance-time-start-date" />
                                </div>
                                <div class="col-sm-2">
                                    <label>วันที่ทำงานสิ้นสุด</label>
                                    <input type="date" class="form-control" id="input-search-attendance-time-end-date" name="input-search-attendance-time-end-date" />
                                </div>
                                <div class="col-sm-4 mt-4 text-end">
                                    <button type="button" class="btn btn-default-custom btn-clear-search-attendance-time">ล้างข้อมูล</button>
                                    <button type="button" class="btn btn-primary btn-search-attendance-time">ค้นหา</button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <div class="col-sm-2 mt-2">
                        <button type="button" class="btn-add-custom btn-add-attendance-time"><img src="~/images/clock.png" width="25px" /> เพิ่มข้อมูลเวลาเข้า-ออกงาน</button>
                    </div>

                    <div class="row col-sm-12 mt-2">
                        <table class="table no-footer" id="tb-attendance-time-list" width="100%">
                            <thead>
                                <tr>
                                    <th><span>รหัสพนักงาน</span></th>
                                    <th><span>ชื่อพนักงาน</span></th>
                                    <th><span>วันที่ทำงาน</span></th>
                                    <th><span>เวลาเข้างาน</span></th>
                                    <th><span>เวลาออกงาน</span></th>
                                    <th><span>จำนวนชั่วโมง</span></th>
                                    <th><span>วันที่สร้าง</span></th>
                                    <th><span>ผู้สร้าง</span></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="nav-attendance-setting" role="tabpanel" aria-labelledby="nav-attendance-setting-tab">
                <div class="container-fluid">
                    <div class="row mt-2">
                        <form id="form-search-attendance-setting">
                            <div class="row col-sm-12">
                                <div class="col-sm-2">
                                    <label>แผนก</label>
                                    <select class="form-select" id="select-search-attendance-setting-department">
                                        <option></option>
                                    </select>
                                </div>
                                <div class="col-sm-10 mt-4 text-end">
                                    <button type="button" class="btn btn-default-custom btn-clear-search-attendance-setting">ล้างข้อมูล</button>
                                    <button type="button" class="btn btn-primary btn-search-attendance-setting">ค้นหา</button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <div class="col-sm-2 mt-2">
                        <button type="button" class="btn-add-custom btn-add-attendance-setting"><img src="~/images/clock.png" width="25px" /> เพิ่มกำหนดเวลางาน</button>
                    </div>

                    <div class="row col-sm-12 mt-2">
                        <table class="table no-footer" id="tb-attendance-setting-list" width="100%">
                            <thead>
                                <tr>
                                    <th width="5%"><span>ลำดับ</span></th>
                                    <th><span>แผนก</span></th>
                                    <th><span>เวลาเข้างาน</span></th>
                                    <th><span>เวลาออกงาน</span></th>
                                    <th><span>วันที่สร้าง</span></th>
                                    <th><span>ผู้สร้าง</span></th>
                                    <th><span>วันที่แก้ไขล่าสุด</span></th>
                                    <th><span>ผู้แก้ไขล่าสุด</span></th>
                                    <th><span>สถานะ</span></th>
                                    <th id="edit-action"><span>แก้ไข</span></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div id="modal-createAttendanceUpload" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header justify-content-center">
                <h4 class="modal-title text-center">เพิ่มข้อมูลเวลาเข้า-ออกงาน</h4>
            </div>
            <div class="modal-body">

                <form id="form-createAttendanceUpload">

                    <div class="row col-sm-12 mb-2">
                        <label class="col-sm-3 col-form-label text-end">อัพโหลดไฟล์ข้อมูล</label>
                        <div class="col-sm-9">
                            <input id="select-attendance-upload-file" name="select-attendance-upload-file[]" type="file" class="file" accept=".csv,.xls,.xlsx, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel">
                        </div>
                    </div>

                </form>

                <div class="col-sm-12 mt-4">
                    <table class="table no-footer" id="tb-attendance-upload-list" width="100%">
                        <thead>
                            <tr>
                                <th><span>รหัสพนักงาน</span></th>
                                <th><span>วันที่ทำงาน</span></th>
                                <th><span>เวลาเข้างาน</span></th>
                                <th><span>เวลาออกงาน</span></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-primary btn-modal-save-attendance-upload"><i class="fas fa-save" aria-hidden="true"></i> บันทึก</button>
                <button type="button" class="btn btn-default-custom" data-bs-dismiss="modal"><i class="fa fa-times" aria-hidden="true"></i> ยกเลิก</button>
            </div>
        </div>
    </div>
</div>

<div id="modal-createAttendanceSetting" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header justify-content-center">
                <h4 class="modal-title text-center"><span id="attendanceSettingHeader"></span></h4>
            </div>
            <div class="modal-body">
                <form id="form-createAttendanceSetting">
                    <div class="row d-sm-flex">
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-sm-6 mb-2">
                                    <label class="control-label">แผนก<span class="text-danger">*</span></label>
                                    <select class="form-select" id="select-attendance-department" data-selected="" name="select-attendance-department"></select>
                                </div>

                            </div>

                        </div>

                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-sm-6 mb-2">
                                    <label class="control-label">เวลาเข้างาน (HH:mm)<span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="input-attendance-time-in" name="input-attendance-time-in" />
                                </div>

                                <div class="col-sm-6 mb-2">
                                    <label class="control-label">เวลาออกงาน (HH:mm)<span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="input-attendance-time-out" name="input-attendance-time-out" />
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-sm-6 mb-2">
                                    <label class="control-label">สถานะ</label>
                                    <select class="form-select" id="select-attendance-status" data-selected="" name="select-attendance-status"></select>
                                </div>

                            </div>

                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-primary btn-modal-save-attendance-setting"><i class="fas fa-save" aria-hidden="true"></i> บันทึก</button>
                <button type="button" class="btn btn-default-custom" data-bs-dismiss="modal"><i class="fa fa-times" aria-hidden="true"></i> ยกเลิก</button>
            </div>
        </div>
    </div>
</div>

<div id="modal-viewAttendanceSetting" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header justify-content-center">
                <h4 class="modal-title text-center"><span id="attendanceSettingHeader"></span></h4>
            </div>
            <div class="modal-body">
                <form id="form-createAttendanceSetting">
                    <div class="row d-sm-flex">
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-sm-6 mb-2">
                                    <label class="control-label">แผนก<span class="text-danger">*</span></label>
                                    <select class="form-select" id="select-attendance-department" data-selected="" name="select-attendance-department" disabled></select>
                                </div>

                            </div>

                        </div>

                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-sm-6 mb-2">
                                    <label class="control-label">เวลาเข้างาน<span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="input-attendance-time-in" name="input-attendance-time-in" disabled />
                                </div>

                                <div class="col-sm-6 mb-2">
                                    <label class="control-label">เวลาออกงาน<span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="input-attendance-time-out" name="input-attendance-time-out" disabled />
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-sm-6 mb-2">
                                    <label class="control-label">สถานะ</label>
                                    <select class="form-select" id="select-attendance-status" data-selected="" name="select-attendance-status" disabled></select>
                                </div>

                            </div>

                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal"><i class="fa fa-times" aria-hidden="true"></i> ปิดหน้าจอ</button>
            </div>
        </div>
    </div>
</div>