@{
    ViewData["Title"] = "เข้าสู่ระบบ";
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap-5.0.2-dist/css/bootstrap.min.css" />
<link href="~/css/loginstyle.css" rel="stylesheet" />

<script src="~/lib/jquery/dist/jquery.min.js" crossorigin="anonymous"></script>

<script src="~/lib/bootstrap-5.0.2-dist/js/bootstrap.bundle.min.js"></script>

<script src="~/scripts/config.js"></script>
<script src="~/scripts/js-helper.js"></script>

<script src="~/scripts/login/login-controller.js"></script>
<script src="~/scripts/login/login-service.js"></script>

<link rel="stylesheet" href="~/assets/sweetalert/sweetalert2.min.css" />
<script src="~/assets/sweetalert/sweetalert2.all.min.js"></script>


<style>
    #img_logo {
        width: 70%;
        position: absolute;
        top: 50%;
        left: 10%;
        transform: translate(-0%, -50%);
    }
</style>
<script>
	localStorage.setItem('webUrl', '@ViewBag.webUrl');
	localStorage.setItem('apiUrl', '@ViewBag.apiUrl');
</script>
