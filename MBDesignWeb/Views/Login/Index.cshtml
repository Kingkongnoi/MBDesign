    <span class="sr-only">Loading...</span>
</div>*@

<div class="container" id="container">
    <div class="form-container sign-in-container">
		<form id="form-login">
			<h1 class="mb-2">เข้าสู่ระบบ</h1>
            <input  type="text" id="input-login-empCode" name="input-login-empCode" placeholder="รหัสพนักงาน" />
            <input  type="password" id="input-login-empPass" name="input-login-empPass" placeholder="รหัสผ่าน" />

            <button type="button" class="btn-login">เข้าสู่ระบบ</button>
		</form>
	</div>
	<div class="overlay-container justify-content-center">
        <img src="~/images/IMG_2178_resize.png" id="img_logo"> 
	</div>
</div>