<div id="modal-editAccounting" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-scrollable modal-xl">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <div class="col-sm-6 mt-2"><h4 class="modal-title">แก้ไขงานเอกสารสัญญา</h4></div>
                <div class="col-sm-6 text-end">
                    <button type="button" class="btn btn-default-custom btn-print-contract"><i class="fa fa-print" aria-hidden="true"></i> พิมพ์เอกสารสัญญา</button>
                </div>
            </div>
            <div class="modal-body">
                <form id="form-editAccounting">
                    <div class="row d-sm-flex">

                        <div class="col-sm-6">
                            <div class="row col-sm-12 mb-3">
                                <label class="col-sm-4 col-form-label text-end">เลขที่สัญญา</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" id="input-edit-acc-contract" name="input-edit-acc-contract" disabled />
                                </div>
                            </div>

                            <div class="row col-sm-12 mb-3">
                                <label class="col-sm-4 col-form-label text-end">สถานะเอกสารสัญญา</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" id="input-edit-acc-contract-status" name="input-edit-acc-contract-status" disabled />
                                </div>
                            </div>

                            <div class="row col-sm-12 mb-3">
                                <label class="col-sm-4 col-form-label text-end">ชื่อลูกค้า<span class="text-danger">*</span></label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" id="input-edit-acc-customer-firstName" name="input-edit-acc-customer-firstName" />
                                </div>
                            </div>

                        </div>

                        <div class="col-sm-6">
                            <div class="row col-sm-12 mb-3">
                                <label class="col-sm-4 col-form-label text-end">เลขที่ใบเสนอราคา</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" id="input-edit-acc-quotation" name="input-edit-acc-quotation" disabled />
                                </div>
                            </div>

                            <div class="row col-sm-12 mb-3">
                                <label class="col-sm-4 col-form-label text-end">สถานะใบแจ้งหนี้</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" id="input-edit-acc-invoice-status" name="input-edit-acc-invoice-status" disabled />
                                </div>
                            </div>

                            <div class="row col-sm-12 mb-3">
                                <label class="col-sm-4 col-form-label text-end">นามสกุล<span class="text-danger">*</span></label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" id="input-edit-acc-customer-surName" name="input-edit-acc-customer-surName" />
                                </div>
                            </div>

                        </div>

                        <div class="col-sm-12">
                            <div class="row col-sm-12 mb-3">
                                <label class="col-sm-2 col-form-label text-end">ที่อยู่ลูกค้า<span class="text-danger">*</span></label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" id="input-edit-acc-customer-address" name="input-edit-acc-customer-address" rows="3"></textarea>
                                </div>
                            </div>

                            <div class="row col-sm-12 mb-3">
                                <label for="formFile" class="col-sm-2 col-form-label text-end">รูปบัตรประชาชนลูกค้า</label>
                                <div class="col-sm-10">
                                    <input id="pic-acc-customer-idCard" name="pic-acc-customer-idCard[]" type="file" class="file" accept="image/*">
                                </div>
                            </div>

                            <div class="row col-sm-12 mb-3">
                                <label for="formFile" class="col-sm-2 col-form-label text-end">รูปแปลน</label>
                                <div class="col-sm-10">
                                    <input id="pic-acc-plan" name="pic-acc-plan[]" type="file" class="file" accept="image/*" multiple>
                                </div>
                            </div>

                            <div class="row col-sm-12 mb-3">
                                <label for="formFile" class="col-sm-2 col-form-label text-end">รูปภาพ 3D อนุมัติ</label>
                                <div class="col-sm-10">
                                    <input id="pic-acc-3d-approve" name="pic-acc-3d-approve[]" type="file" class="file" accept="image/*" multiple>
                                </div>
                            </div>

                            <div class="row col-sm-12 mb-3">
                                <label for="formFile" class="col-sm-2 col-form-label text-end"></label>
                                <div class="col-sm-10">
                                    <button type="button" class="btn btn-default-custom btn-send-contract-doc">ส่งเอกสารสัญญาไปทีมเซลล์และโฟร์แมน</button>
                                </div>
                            </div>

                            
                        </div>

                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-modal-save-accounting"><i class="fas fa-save" aria-hidden="true"></i> บันทึก</button>
                <button type="button" class="btn btn-default-custom" data-bs-dismiss="modal"><i class="fa fa-times" aria-hidden="true"></i> ยกเลิก</button>
            </div>
        </div>
    </div>
</div>

