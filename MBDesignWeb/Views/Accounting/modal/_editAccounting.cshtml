    .file-preview-frame {
        width: 150px;
        height: 200px;
    }

    .krajee-default.file-preview-frame .kv-file-content {
        width: 130px;
        height: 150px;
    }

    .krajee-default .file-footer-caption {
        display: none;
    }

    .kv-file-upload, .fileinput-cancel-button, .fileinput-upload-button, .fileinput-remove-button, .fileinput-remove,
    .btn-toggleheader, .btn-fullscreen, .btn-borderless, .kv-file-remove {
        display: none;
    }
</style>