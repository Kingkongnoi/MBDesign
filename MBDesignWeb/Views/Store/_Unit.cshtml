<div class="container-fluid">
    <div class="card mt-4">
        <div class="card-body">
            <div class="row mt-2">
                <form id="form-search-Unit">
                    <div class="row col-sm-12">

                        <div class="col-sm-2">
                            <label>รหัสหน่วยสินค้า</label>
                            <input type="text" class="form-control" id="input-search-unit-code" placeholder="">
                        </div>
                        <div class="col-sm-2">
                            <label>ชื่อหน่วยสินค้า</label>
                            <input type="text" class="form-control" id="input-search-unit-name" placeholder="">
                        </div>
                        <div class="col-sm-2">
                            <label>สถานะ</label>
                            <select class="form-select" id="select-search-unit-status">
                                <option></option>
                            </select>
                        </div>

                        <div class="col-sm-6 mt-4 text-end">
                            <button type="button" class="btn btn-default-custom btn-clear-search-unit">ล้างข้อมูล</button>
                            <button type="button" class="btn btn-primary btn-search-unit">ค้นหา</button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-sm-2 mt-2">
                <button type="button" class="btn-add-custom btn-add-unit"><img src="~/images/checklist.png" width="25px" /> เพิ่มหน่วยสินค้า</button>
            </div>

            <div class="row col-sm-12 mt-2">
                <table class="table no-footer" id="tb-unit-list" width="100%">
                    <thead>
                        <tr>
                            <th><span>รหัสหน่วยสินค้า</span></th>
                            <th><span>ชื่อหน่วยสินค้า</span></th>
                            <th><span>วันที่สร้าง</span></th>
                            <th><span>ผู้สร้าง</span></th>
                            <th><span>วันที่แก้ไขล่าสุด</span></th>
                            <th><span>ผู้แก้ไขล่าสุด</span></th>
                            <th><span>สถานะ</span></th>
                            <th id="edit-action"><span>แก้ไข</span></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@*modal for create Unit*@
<div id="modal-createUnit" class="modal fade" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header justify-content-center">
                <h4 class="modal-title text-center"><span id="itemHeader"></span></h4>
            </div>
            <div class="modal-body">
                <form id="form-createUnit">
                    <div class="row d-sm-flex">
                        @*<div class="col-sm-12">*@
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-sm-12 mb-2">
                                    <label class="control-label">รหัสหน่วยสินค้า<span class="text-danger">*</span></label>
                                    <input class="form-control" type="text" id="input-unit-code" name="input-unit-code" disabled />
                                </div>
                                <div class="col-sm-12 mb-2">
                                    <label class="control-label">ชื่อหน่วยสินค้า<span class="text-danger">*</span></label>
                                    <input class="form-control" type="text" id="input-unit-name" name="input-unit-name" />
                                </div>
                                <div class="col-sm-12 mb-2">
                                    <label class="control-label">สถานะ</label>
                                    <select class="form-select" id="select-unit-status" data-selected="" name="select-unit-status"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-primary btn-modal-save-unit"><i class="fas fa-save" aria-hidden="true"></i> บันทึก</button>
                <button type="button" class="btn btn-default-custom" data-bs-dismiss="modal"><i class="fa fa-times" aria-hidden="true"></i> ยกเลิก</button>
            </div>
        </div>
    </div>
</div>

